{
    "name": "Apache2 Lite",
    "version": "0.1.1",
    "slug": "apache2lite",
    "description": "Apache2 Webserver Add-on (Lite)",
    "url": "https://github.com/hulkhaugen/hassio-addons/tree/master/apache2lite",
    "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
    "startup": "application",
    "boot": "auto",
    "webui": "[PROTO:ssl]://[HOST]:[PORT:80]",
    "map": ["share:rw", "media:rw", "ssl"],
    "ingress": true,
    "panel_icon": "mdi:web",
    "options": {
      "document_root": "/share/htdocs",
      "default_conf": "default",
      "default_ssl_conf": "default",
      "website_name":null,
      "ssl": true,
      "certfile": "fullchain.pem",
      "keyfile": "privkey.pem"
    },
    "schema": {
      "document_root":"str",
      "default_conf":"str",
      "default_ssl_conf":"str",
      "website_name":"str",
      "ssl": "bool",
      "certfile": "str",
      "keyfile": "str"
    },
    "ports": {
      "80/tcp": 80,
      "443": 443
    },
    "ports_description": {
      "80/tcp": "HTTP Web interface",
      "443/tcp": "SSL Web interface"
    }
  }
